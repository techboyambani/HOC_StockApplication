<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoc.stockapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".LogIn"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".SignUp"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".AddCompany"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".AddCompanySize"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".AddCompanyDesign"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ViewStock"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ViewStock_Design"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".EditStock"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".EditStock_Design"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>